
<div class="hero-unit center sign-in">
	<h1>Sign In</h1>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>	 

	  <%= f.email_field :email, :autofocus => true, placeholder: "Email" %><br/>
	  <%= f.password_field :password, placeholder: "Password" %>

	  <% if devise_mapping.rememberable? -%>
	    <div class="buttons">
	    	<div class="links pull-left">
		    	<%= f.label :remember_me, class: "pull-left" %>
		    	<%= f.check_box :remember_me, class: "pull-left" %>
		    	<br/>
		    	<%= render "devise/shared/links" %>
		    </div>
	    	<%= f.submit "Sign in", class: "pull-right btn btn-primary" %>
	    </div>
	  <% end -%>
	<% end %>
</div>



